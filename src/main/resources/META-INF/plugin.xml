<idea-plugin>
    <id>com.objp.livejson</id>
    <name>Live JSON</name>
    <vendor url="https://github.com/dkandalov/live-json">Jason Prasad</vendor>

    <description><![CDATA[
A plugin that demonstrates KTS for creating workflows resulting in JSON.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Live JSON" anchor="right" canCloseContents="false"
                    icon="/icons/json.svg"
                    factoryClass="com.objp.livejson.toolwindow.LiveJsonToolWindowFactory"/>
    </extensions>
</idea-plugin>